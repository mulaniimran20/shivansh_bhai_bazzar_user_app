<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_15sdp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_2sdp">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dailog_edit_profile_ivProfile"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/profileimg"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp" />

            <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                android:id="@+id/dailog_edit_profile_tvChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/drawable_current_location"
                android:gravity="center"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:text="@string/change"
                android:textColor="@color/forgor_submit_color"
                android:textSize="@dimen/_13sdp"
                app:font_name="NunitoExtraBold.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                        style="@style/ganaral_edittext_style"
                        android:paddingStart="@dimen/_3sdp"
                        android:text="@string/first_name"
                        app:font_name="NunitoBold.ttf" />

                    <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomEdittext
                        android:id="@+id/dailog_edit_profile_etFirstName"
                        style="@style/ganaral_profile_edittext_style"
                        android:hint="@string/enter_first_name"
                        android:inputType="text"
                        app:font_name="NunitoLight.ttf" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                        style="@style/ganaral_edittext_style"
                        android:paddingStart="@dimen/_3sdp"
                        android:text="@string/last_name"
                        app:font_name="NunitoBold.ttf" />

                    <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomEdittext
                        android:id="@+id/dailog_edit_profile_etLastName"
                        style="@style/ganaral_profile_edittext_style"
                        android:hint="@string/enter_last_name"
                        android:inputType="textEmailAddress"
                        app:font_name="NunitoLight.ttf" />

                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">

                <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                    style="@style/ganaral_edittext_style"
                    android:paddingStart="@dimen/_3sdp"
                    android:text="@string/phone"
                    app:font_name="NunitoBold.ttf" />

                <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomEdittext
                    android:id="@+id/dailog_edit_profile_etPhone"
                    style="@style/ganaral_profile_edittext_style"
                    android:hint="@string/enter_your_phone"
                    android:inputType="text"
                    app:font_name="NunitoLight.ttf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
               android:orientation="vertical">

                <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                    style="@style/ganaral_edittext_style"
                    android:paddingStart="@dimen/_3sdp"
                    android:text="@string/email"
                    app:font_name="NunitoBold.ttf" />

                <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomEdittext
                    android:id="@+id/dailog_edit_profile_etEmail"
                    style="@style/ganaral_profile_edittext_style"
                    android:hint="@string/enter_your_email"
                    android:inputType="textEmailAddress"
                    app:font_name="NunitoLight.ttf" />

           </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                        style="@style/ganaral_edittext_style"
                        android:paddingStart="@dimen/_3sdp"
                        android:text="Flat Number"
                        app:font_name="NunitoBold.ttf" />

                    <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomEdittext
                        android:id="@+id/dailog_edit_profile_flatNumber"
                        style="@style/ganaral_profile_edittext_style"
                        android:hint="Enter Flat Number"
                        android:inputType="text"
                        app:font_name="NunitoLight.ttf" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                        style="@style/ganaral_edittext_style"
                        android:paddingStart="@dimen/_3sdp"
                        android:text="Wing Name"
                        app:font_name="NunitoBold.ttf" />

                    <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomEdittext
                        android:id="@+id/dailog_edit_profile_wingName"
                        style="@style/ganaral_profile_edittext_style"
                        android:hint="Enter Wing Name"
                        android:inputType="text"
                        app:font_name="NunitoLight.ttf" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">

                <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                    style="@style/ganaral_edittext_style"
                    android:paddingStart="@dimen/_3sdp"
                    android:text="Society Name"
                    app:font_name="NunitoBold.ttf" />

                <Spinner
                    android:id="@+id/dailog_add_societyname_etsocietyname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                     />

            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                    android:id="@+id/dailog_edit_profile_tvCancel"
                    style="@style/ganaral_btn_save_style"
                    android:layout_toStartOf="@+id/dailog_edit_profile_tvSave"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/cancel"
                    app:font_name="NunitoSemiBold.ttf" />

                <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                    android:id="@+id/dailog_edit_profile_tvSave"
                    style="@style/ganaral_btn_save_style"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/save"
                    app:font_name="NunitoExtraBold.ttf" />

            </RelativeLayout>
       </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v7.widget.CardView>