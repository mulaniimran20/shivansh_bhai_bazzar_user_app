        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/dialog_filter_ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_close" />

            <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_2sdp"
                android:text="@string/filter_sorting"
                android:textAllCaps="true"
                android:layout_toEndOf="@+id/dialog_filter_ivClose"
                android:textColor="@color/login_signup_edithint_color"
                android:textSize="@dimen/_10sdp"
                app:font_name="NunitoSemiBold.ttf" />

            <RelativeLayout
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toStartOf="@id/dialog_filter_btnApply"
                android:background="@drawable/drawable_dialog_filter_claer_btn"
                android:padding="@dimen/_5sdp">


                <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/clear"
                    android:layout_centerVertical="true"
                    android:textColor="@color/checkout_order_btn"
                    android:textSize="@dimen/_12sdp"
                    app:font_name="NunitoBold.ttf" />


            </RelativeLayout>


            <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomButton
                android:id="@+id/dialog_filter_btnApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/drawable_checkout_order_btn"
                android:text="@string/apply"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                app:font_name="NunitoBold.ttf" />


        </RelativeLayout>


        <LinearLayout
