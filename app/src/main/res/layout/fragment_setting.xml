<?xml version="1.0" encoding="utf-8"?>
<com.aarfaatechnovision.kjl.shivanshbhajibazar.comman.SlidingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/row_checkout_bg_color"
    android:orientation="vertical">

    <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
        style="@style/ganaral_header_style"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/legal"
        android:textSize="@dimen/_15sdp"
        app:font_name="NunitoBold.ttf" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/fragment_setting_rlTermOfUse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">


                <ImageView
                    android:id="@+id/fragment_setting_tvTermOfUse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_terms" />


                <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                    style="@style/ganaral_greystyle"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/fragment_setting_tvTermOfUse"
                    android:text="@string/terms_off_use"
                    android:textSize="@dimen/_14sdp"
                    app:font_name="NunitoSemiBold.ttf" />


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/payment_lbl" />


            <RelativeLayout
                android:id="@+id/fragment_setting_rlPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">


                <ImageView
                    android:id="@+id/fragment_setting_ivPrivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_privacy" />


                <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                    style="@style/ganaral_greystyle"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/fragment_setting_ivPrivacy"
                    android:text="@string/privacy_policy"
                    android:textSize="@dimen/_14sdp"
                    app:font_name="NunitoSemiBold.ttf" />


            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</com.aarfaatechnovision.kjl.shivanshbhajibazar.comman.SlidingLinearLayout>