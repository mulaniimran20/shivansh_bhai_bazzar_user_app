<?xml version="1.0" encoding="utf-8"?>
<com.aarfaatechnovision.kjl.shivanshbhajibazar.comman.SlidingRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_15sdp"
    android:clickable="true"
    android:focusable="true"
    android:layout_gravity="center"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                    style="@style/ganaral_header_style"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/location_area"
                    app:font_name="NunitoBold.ttf" />


                <ImageView
                    android:id="@+id/dailog_add_pincode_ivClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_close" />

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">


                <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                    style="@style/ganaral_lable_style"
                    android:paddingStart="@dimen/_3sdp"
                    android:text="Detail Address"
                    app:font_name="NunitoBold.ttf" />


                <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomEdittext
                    android:id="@+id/dailog_add_address_etaddress"
                    style="@style/ganaral_edittext_style"
                    android:hint="Address"
                    android:inputType="number"
                    app:font_name="NunitoLight.ttf" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">


                <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                    style="@style/ganaral_lable_style"
                    android:paddingStart="@dimen/_3sdp"
                    android:text="Society name"
                    app:font_name="NunitoBold.ttf" />
                <Spinner
                    android:id="@+id/dailog_add_societyname_etsocietyname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                    android:id="@+id/dailog_add_pincode_tvCancel"
                    style="@style/ganaral_btn_save_style"
                    android:layout_toStartOf="@+id/dailog_add_pincode_tvSave"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/cancel"
                    app:font_name="NunitoSemiBold.ttf" />


                <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                    android:id="@+id/dailog_add_pincode_tvSave"
                    style="@style/ganaral_btn_save_style"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/save"
                    app:font_name="NunitoExtraBold.ttf" />


            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>
</com.aarfaatechnovision.kjl.shivanshbhajibazar.comman.SlidingRelativeLayout>