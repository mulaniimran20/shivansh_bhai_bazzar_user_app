<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_productlist_cvContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/row_product_card_bg"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            android:layout_margin="@dimen/_2sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/row_productlist_ivProImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/p_tomato" />

                <TextView
                    android:id="@+id/tv"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:text="100% \n off"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:background="@drawable/bg_red"
                    android:gravity="center_vertical|center_horizontal"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                android:id="@+id/row_productlist_tvName"
                style="@style/ganaral_greystyle"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_16sdp"
                app:font_name="NunitoBold.ttf" />


            <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                android:id="@+id/row_productlist_tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/login_signup_edithint_color"
                android:textSize="@dimen/_10sdp"
                app:font_name="NunitoLight.ttf" />


        </RelativeLayout>


        <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
            android:id="@+id/row_produclist_tvAddtoCart"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/addcart_drawable"
            android:gravity="center"
            android:text="@string/add_to_cart"
            android:textAllCaps="true"
            android:textColor="@color/row_product_add_color"
            android:textSize="@dimen/_13sdp"
            android:visibility="visible"
            app:font_name="NunitoExtraBold.ttf" />


        <RelativeLayout
            android:id="@+id/row_produclist_rlTotalCart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/row_productlist_ivMins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_mins_y" />


            <com.aarfaatechnovision.kjl.shivanshbhajibazar.customecomponent.CustomTextView
                android:id="@+id/row_productlist_tvTotalKg"
              style="@style/order_lable_style"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                app:font_name="NunitoBold.ttf" />


            <ImageView
                android:id="@+id/row_productlist_ivPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_plus_y" />


        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>

