<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_login_llContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:scrollbarStyle="outsideInset">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/_5sdp">

       <org.sufficientlysecure.htmltextview.HtmlTextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:padding="@dimen/_10sdp"
           android:id="@+id/textTermsAndConditionDisplay"
           android:textAppearance="@android:style/TextAppearance.Small">
       </org.sufficientlysecure.htmltextview.HtmlTextView>

    </android.support.v7.widget.CardView>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/drawable_payment_method"
        android:orientation="vertical">


        <RadioGroup
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:id="@+id/paymentidd">


            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wallet_upi"
                android:id="@+id/wallet_upi"
                android:textAlignment="textStart"
                android:layoutDirection="rtl"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp"
                app:font_name="NunitoRegular.ttf"
                tools:ignore="MissingPrefix"
                android:padding="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_10sdp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/row_product_cart_line_color">
            </View>

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Card Payment / Net Banking"
                android:id="@+id/online"
                android:textAlignment="textStart"
                android:layoutDirection="rtl"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp"
                app:font_name="NunitoRegular.ttf"
                tools:ignore="MissingPrefix"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_15sdp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/row_product_cart_line_color">
            </View>



        </RadioGroup>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_gravity="center_horizontal">



    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/cameraId"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/iconscamera"></ImageView>

    </RelativeLayout>


</LinearLayout>
</android.support.v4.widget.NestedScrollView>