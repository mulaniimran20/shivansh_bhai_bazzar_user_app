<resources>

    <style name="AppTheme" parent="MyMaterialTheme.Base"></style>



    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="android:layoutDirection">locale</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>

    </style>


    <style name="homeCardImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:cropToPadding">true</item>
    </style>
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="viewParent.headerText.HomeCardTitle">
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>


    <style name="ganaral_greystyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="ganaral_primarystyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="ganaral_black_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>


    <style name="ganaral_grey_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="ganaral_header_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="ganaral_lable_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="order_lable_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="ganaral_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/login_signup_edithint_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>


    <style name="ganaral_profile_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="ganaral_logintext_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/login_signup_btn_login_color</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>


    <style name="ganaral_btn_save_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/forgor_submit_color</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="ganaral_lightgrey_btn_save_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/signup_tab_color</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>


    <style name="ganaral_facebook_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/facebook_lable_color</item>
        <item name="android:background">@drawable/drawable_facebook</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>


    <style name="ganaral_google_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/gmail_lable_color</item>
        <item name="android:background">@drawable/drawable_google</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="ganaral_details_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/product_details_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>


    <style name="empty_title" >
        <item name="android:textSize">@dimen/font_18sp</item>
        <item name="android:textColor">@color/row_view</item>
    </style>


    <style name="PauseDialogAnimationTultip">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
    </style>


</resources>
